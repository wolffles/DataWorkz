<%= form_for applet do |f| %>
  <div class="form-group">
    <%= f.label :name %>
     <%= f.text_field :name, class: 'form-control', placeholder: "Enter name of application" %>
  </div>

  <div class="form-group">
    <%= f.label :url%>
    <%= f.text_field :url, class: 'form-control', placeholder: "Name-of-website.com" %>
  </div>
  <div class = "form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
